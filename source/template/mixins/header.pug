//- Preheader
//---------------
mixin header
	table(width="100%" cellspacing="0" cellpadding="0" style="background-color:#5B9AE4;")
		tr
			td(height="20px").preheader текст который будет отображаться после темы письма
		tr: td
			+ie-open({table:640})
			table(width="100%" align="center" cellspacing="0" cellpadding="0" style="max-width:640px;")
				tr
					td(width="50%" style="padding: 0 10px;")
						a(href="https://new.city.travel/")
							img(src="img/logo.png",  width="167" height="45" border="0" alt="City.Travel")
				
					td(width="50%" align="right" style="padding-right:10px;")
						p.view Проблемы с отображением письма?
						a.view-link(href="#") Смотрите онлайн-версию
			+ie-close
		tr
			td(height="20px") &nbsp;