//- block-promo
//---------------
mixin block-promo(title)
	div(style="margin:0px auto;max-width:640px;")
		+ie-open({table: 640})
		table(cellpadding="0" cellspacing="0" width="100%" align="center" border="0" bgcolor="#ffffff")
			tr
				td.promo(valign="top")
					table(cellpadding="20" cellspacing="0" width="100%" align="left" border="0")
						tr
							td(bgcolor="#f2f2f2")
								table(cellpadding="0" cellspacing="0" width="100%"  align="left" border="0")
									tr
										td.promo-title=title
					table(cellpadding="0" cellspacing="0" width="100%" align="left" border="0")
						tr
							td(height="10" colspan="3" style="padding:0px;")
						each item in products.product
							if item.flyIn == page.flyIn
								tr
									td.promo-name=item.flyOut
									td(width="170" style="padding-right: 0;padding-left: 0;")
										a.promo-price(href=item.url) от !{item.price} рублей
										p.promo-fly билет в одну сторону						
									td(style="padding-bottom:4px; padding-right:0px; padding-left:0;" width="120")
										table(cellpadding="0" cellspacing="0" width="100%" align="right" border="0")
											tr
												td.promo-link(align="center" )
													a(href=item.url) Выбрать даты
			tr
				td(style="padding:10px 30px 50px 30px;")
					+button-full("больше специальных предложений")

		+ie-close

