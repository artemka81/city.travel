				tr
					td(bgcolor="#E8E8E8" valign="middle" style="background:url(https://gallery.mailchimp.com/11b2ba62a2d4d21ef7a3daad5/images/628ef28d-8940-4a0a-afc9-cede84734b02.jpg) top center / auto no-repeat")
						+ie-open-bg
						div(style="margin:0px auto;max-width:640px;")
							table(cellpadding="0" cellspacing="0" style="border-collapse:collapse;width:100%;" align="center" border="0")
								tr
									td(style="border-collapse:collapse;direction:ltr;padding:0px;text-align:center;vertical-align:middle;")
